{
  "name": "github-metrics",
  "type": "module",
  "version": "0.0.0",
  "description": "Discover comprehensive insights into your GitHub repositories' metrics. Track stars, forks, and more, all conveniently stored locally",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx nolyfill",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint:ts": "vue-tsc --noEmit",
    "lint:js": "eslint .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint **/*{.scss,.vue}",
    "lint:css:fix": "npm run lint:css -- --fix",
    "lint:all": "npm run lint:ts && npm run lint:js && npm run lint:css"
  },
  "dependencies": {
    "@octokit/core": "^7.0.2",
    "@tabler/icons-vue": "^3.34.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vueuse/core": "^13.3.0",
    "@vueuse/integrations": "^13.3.0",
    "dayjs": "^1.11.13",
    "http-status-codes": "^2.3.0",
    "semver": "^7.7.2",
    "sortablejs": "^1.15.6",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "vue": "^3.5.16",
    "vue-dompurify-html": "^5.3.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.3",
    "@octokit/types": "^14.1.0",
    "@stylistic/stylelint-plugin": "^3.1.2",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^22.15.29",
    "@types/semver": "^7.7.0",
    "eslint": "^9.28.0",
    "mime-type": "^5.0.3",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "sass-embedded": "^1.89.1",
    "stylelint": "^16.20.0",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-order": "^7.0.0",
    "stylelint-rem-over-px": "^1.0.2",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "vue-router": "^4.5.1",
    "vue-tsc": "^2.2.10",
    "workbox-build": "^7.3.0",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0",
    "workbox-window": "^7.3.0"
  },
  "pnpm": {
    "overrides": {
      "is-core-module": "npm:@nolyfill/is-core-module@^1",
      "safe-buffer": "npm:@nolyfill/safe-buffer@^1",
      "string.prototype.matchall": "npm:@nolyfill/string.prototype.matchall@^1"
    }
  }
}
